require pypi setup-py [ blacklist="2 3.5" import=setuptools ]

SUMMARY="Execute binaries from Python packages in isolated environments"
HOMEPAGE+=" https://pipxproject.github.io/pipx/"

LICENCES="MIT"
SLOT="0"
PLATFORMS="~amd64"
MYOPTIONS=""

DEPENDENCIES="
    build+run:
        dev-python/userpath[python_abis:*(-)?]
"

# no tests in pypi distribution
RESTRICT="test"

