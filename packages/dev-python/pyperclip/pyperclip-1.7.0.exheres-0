require pypi
require setup-py [ import=setuptools ]

SUMMARY="A cross-platform clipboard module for Python"

LICENCES="BSD-3"
SLOT="0"
PLATFORMS="~amd64"
MYOPTIONS=""

DEPENDENCIES="
    run:
        x11-utils/xclip
"

# Testing requires access to X clipboard
RESTRICT="test"

test_one_multibuild() {
    PYTHONPATH="${PWD}/build/lib" edo ${PYTHON} tests/test_pyperclip.py
}

