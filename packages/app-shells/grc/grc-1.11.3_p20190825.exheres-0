GITHUB_REVISION="30606591b705454e3c64050ac41b5a1622977994"

require github [ user=garabik ]
require python [ blacklist=none multibuild=false has_bin=true ]
require zsh-completion

SUMMARY="Generic Colouriser"

LICENCES="GPL-2"
SLOT="0"
PLATFORMS="~x86 ~amd64"
MYOPTIONS=""

DEPENDENCIES="
"

ZSH_COMPLETIONS=( _grc )

src_prepare() {
    edo sed \
        -e "1 s|.\+|#!${PYTHON}|" \
        -i grc \
        -i grcat
}

src_install() {
    dobin grc grcat

    insinto "/etc"
    doins "${PN}.conf"

    insinto "/etc/${PN}"
    doins "${PN}.zsh" "${PN}.bashrc"

    insinto "/usr/share/${PN}"
    doins colourfiles/conf.*

    doman grc.1 grcat.1
    emagicdocs

    zsh-completion_src_install
}

pkg_postinst() {
    einfo "Consult installed README to integrate 'grc' into your shell"
}

