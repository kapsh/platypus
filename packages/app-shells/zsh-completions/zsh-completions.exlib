require github [ user="zsh-users" tag="${PV}" ]
require zsh-completion

export_exlib_phases src_install

SUMMARY="Additional completion definitions for Zsh"

LICENCES="ZSH"
SLOT="0"
MYOPTIONS=""

DEPENDENCIES="
    build:
    build+run:
"

zsh-completions_src_install() {
    local f
    for f in src/_*; do
        dozshcompletion "$f"
    done
}
